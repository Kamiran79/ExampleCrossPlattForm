    <!-- SPRING 2020 SEMESTER -->
    <!-- StackExample Layout On ClassRoom -->

    <ContentPage.Content>
        <!-- Padding is spacing between controls and the layout -->
        <!-- For the padding either give one value or give 4 values -->
        <!-- The four values order is left,top,right, and bottom -->
        <!-- Spacing is spacing between controls -->
        <!-- Stacklayout is used to stack the controls either vartically or horizantally -->
         
              <StackLayout BackgroundColor="Red">
            <StackLayout BackgroundColor="Aqua"
                         Spacing="30"
                         VerticalOptions="Center"
                         Orientation="Horizontal"
                         Padding="20">
                <BoxView BackgroundColor="BlueViolet" MinimumHeightRequest="50" MinimumWidthRequest="50"
                         HorizontalOptions="Center"
                         VerticalOptions="Center"></BoxView>
                <StackLayout>
                    <Label Text="label1"></Label>
                </StackLayout>
                
                <Label Text="label2"></Label>
                <Label Text="label3"></Label>
            </StackLayout>
        </StackLayout>

    </ContentPage.Content>
</ContentPage>
